{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Linux - Build Image",
            "type": "shell",
            "command": "docker pull lacledeslan/steamcmd:linux; docker pull debian:stretch-slim; docker build -f ./linux.Dockerfile -t lltest/gamesvr-svencoop --no-cache --build-arg BUILDNODE=$env:computername .;",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Self Tests",
            "type": "shell",
            "command": "docker run -it --rm lltest/gamesvr-svencoop ./ll-tests/gamesvr-svencoop.sh;",
            "dependsOn": "Linux - Build Image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host lltest/gamesvr-svencoop ./svends_run -num_edicts 3072 +sv_lan 1",
            "dependsOn": "Linux - Build Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm lltest/gamesvr-svencoop;",
            "dependsOn": "Linux - Build Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
